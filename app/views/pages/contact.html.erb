<h1>Contact Us</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="jumbotron">
        <h3>Email Us</h3>
        <%= form_for @message, url: contact_pages_path do |f| %>
          <%= notice %>
          <%= @message.errors.full_messages.join(', ') %>
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: 'name' %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: 'email' %>
          </div>
          <div class="form-group">
            <%= f.text_area :body, class: 'form-control', placeholder: 'body' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Send', class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="jumbotron">
        <h3>Call Us</h3>
        <p><%= number_to_phone "801-819-5154" %></p>
      </div>
    </div>
  </div>
</div>
