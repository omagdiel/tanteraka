<%= form_with(model: @floor_plan, local: true) do |f| %>

  <% if @floor_plan.errors.any? %>
    <% @floor_plan.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :information %>
    <%= f.text_area :info, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :main_image %>
    <%= f.file_field :main_img, class: 'form-control' %>
  </div>
  <div>
    <div class="form-group">
      <%= f.fields_for :floor_plan_images do |fp_img_form| %>
        <%= render 'floor_plan_image_fields', f: fp_img_form %>
      <% end %>
      <div>
        <%= link_to_add_association 'Add Image', f, :floor_plan_images, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit 'Save Floor Plan', class: 'btn btn-primary' %>
  </div>
<% end %>
