<div>
  <p>
    <%= @floor_plan.title %>
  </p>
  <p>
    <%= @floor_plan.info %>
  </p>
  <p>
    <%= image_tag @floor_plan.main_img %>
  </p>
  <% @floor_plan.floor_plan_images.each do |t| %>
    <p><%= image_tag t.image %></p>
  <% end %>

  <span>
    <%= link_to "Edit", edit_floor_plan_path(@floor_plan) %>
    <%= link_to "Delete", @floor_plan, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
  </span>
</div>
