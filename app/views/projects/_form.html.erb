<%= form_with(model: @project, local: true) do |f| %>

  <% if @project.errors.any? %>
    <% @project.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :information %>
    <%= f.text_area :info %>
  </div>
  <div>
    <%= f.label :main_image %>
    <%= f.file_field :main_img %>
  </div>
  <div>
    <div>
      <%= f.fields_for :project_images do |project_img_form| %>
        <%= render 'project_image_fields', f: project_img_form %>
      <% end %>
      <div>
        <%= link_to_add_association 'Add Image', f, :project_images %>
      </div>
    </div>
  </div>
  <div>
    <%= f.submit 'Save Project' %>
  </div>
<% end %>
