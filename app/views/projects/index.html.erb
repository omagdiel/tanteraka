<h1>Projects Index Page</h1>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-4">
      <div class="card">
        <%#= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%'%>
        <p class="card-text">
          <div>
            <%= link_to project.title, project_path(project) %>
          </div>
        </p>
      </div>
    </div>
  <% end%>
</div>
